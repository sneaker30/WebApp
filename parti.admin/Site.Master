    <script type="text/javascript">

        function swalModal(actions, msgs, currentPage) {
            Swal.fire({
                type: actions,
                title: 'ແຈ້ງເຕືອນ',
                html: msgs,
            }).then(result => {
                if (result.value) {
                    if (currentPage != '') {
                        window.location = currentPage;
                    }
                }
            });
        }

        function swalToast(action, msg) {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 6000
            });

            if (action == 'error') {
                Toast.fire({
                    type: 'error',
                    title: msg
                });
            } else if (action == 'warning') {
                Toast.fire({
                    type: 'warning',
                    title: msg
                });
            } else if (action == 'success') {
                Toast.fire({
                    type: 'success',
                    title: msg
                });
            } else if (action == 'info') {
                Toast.fire({
                    type: 'info',
                    title: msg
                });
            }
        }

    </script>

